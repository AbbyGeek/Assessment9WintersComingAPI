    <input type="submit" value="Look" />
</form>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Gender</th>
        <th>Culture</th>
        <th>Born</th>
        <th>Died</th>
        <th>Titles</th>
        <th>Aliases</th>
    </tr>

    @if (ViewBag.CharInfo != null)
    {
        <tr>
            <td>@ViewBag.CharInfo.name</td>
            <td>@ViewBag.CharInfo.gender</td>
            <td>@ViewBag.CharInfo.culture</td>
            <td>@ViewBag.CharInfo.born</td>
            <td>@ViewBag.CharInfo.died</td>
            <td>
                <select>
                    @foreach (string y in ViewBag.CharInfo.titles)
                    {
                        <option>@y</option>
                    }
                </select>
            </td>
            <td>
                <select>
                    @foreach (string y in ViewBag.CharInfo.aliases)
                    {
                        <option>@y</option>
                    }
                </select>
            </td>
        </tr>

    }
</table>
@if (ViewBag.CharInfo != null)
{
    <a href=ViewBag.CharInfo.url>View All details</a>
}
